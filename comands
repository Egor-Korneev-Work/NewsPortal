from django.contrib.auth.models import User
from NewsPortal.models import *
user1 = User.objects.create_user('Иван')
user2 = User.objects.create_user('Петр')
author1 = Author.objects.create(user=user1)
author2 = Author.objects.create(user=user2)
category1 = Category.objects.create(name='Спорт')
category2 = Category.objects.create(name='Политика')
category3 = Category.objects.create(name='Образование')
category4 = Category.objects.create(name='Технологии')
post1 = Post.objects.create(author=author1, post_type='article', title='Первая статья', content='Текст первой статьи.')
post2 = Post.objects.create(author=author2, post_type='article', title='Вторая статья', content='Текст второй статьи.')
post3 = Post.objects.create(author=author1, post_type='news', title='Первая новость', content='Текст первой новости.')
post1.categories.add(category1, category2)
post2.categories.add(category3)
post3.categories.add(category4)
Comment1=Comment.objects.create(post=post1, user=user1, text='Отличная статья!')
Comment2=Comment.objects.create(post=post2, user=user2, text='Интересная статья!')
Comment3=Comment.objects.create(post=post3, user=user1, text='Полезная новость!')
Comment4=Comment.objects.create(post=post1, user=user2, text='Классная статья.')
post1.like()
post2.dislike()
post3.like()
Comment1.like()
Comment2.dislike()
Comment3.like()
Comment4.dislike()
author1.update_rating()
author2.update_rating()
best_author = Author.objects.order_by('-rating').first()
print(f"Лучший пользователь: {best_author.user.username}, Рейтинг: {best_author.rating}")
best_post = Post.objects.order_by('-rating').first()
author = best_post.author
print(f"Дата добавления: {best_post.created_at}\nUsername автора: {author.user.username}\nРейтинг статьи: {best_post.rating}\nЗаголовок статьи: {best_post.title}\nПревью статьи: {best_post.preview()}")
best_post = Post.objects.order_by('-rating').first()
comments = best_post.comment_set.all()
for comment in comments:
    print(f"Дата: {comment.created_at}, Пользователь: {comment.user.username}, Рейтинг: {comment.rating}, Текст: {comment.text}\n")